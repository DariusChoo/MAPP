<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExploreCategoryActivity">

<!--    Top Bar-->

    <!--    Category Name    -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#38598b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/test"
        android:textColor="#FFF"
        android:textSize="20sp"
 />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Test2"
        android:textColor="#FFF"
        android:textSize="15dp" />

<!--Back button-->
    <ImageButton
        android:id="@+id/backCat"
        android:onClick="onClick"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:background="#000000"
        android:src="@drawable/backbutton" />

<!--    Search Button-->

    <ImageButton


        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="11dp"
        android:background="#00000000"
        android:orientation="horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/searchbutton" />

    <TextView
        android:id="@+id/griddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        android:text="Apple"
        android:textColor="#000"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/griddata"
        android:src="@drawable/mountainco"
        android:layout_marginTop="27dp"/>

</RelativeLayout>
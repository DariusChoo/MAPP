<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:background="#B3BDBDBD"
        android:id="@+id/text_view_event_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart = "10dp"
        android:layout_below="@+id/text_view_eventday"
        android:layout_marginTop="1dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeTextType="uniform"
        android:textColor="#B3000000"
        android:fontFamily="@font/proxima_bold"
        android:text="11/12/2021" />

    <TextView
        android:id="@+id/text_view_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart = "10dp"
        android:layout_below="@+id/text_view_eventday"
        android:layout_marginTop="1dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textColor="#B3000000"
        android:fontFamily="@font/proxima_bold"
        android:text="Cat Gang Lovers" />

    <TextView
        android:id="@+id/text_view_eventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart = "10dp"
        android:layout_below="@+id/text_view_eventday"
        android:layout_marginTop="1dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="8sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textColor="#000"
        android:fontFamily="@font/proxima_bold"
        android:text="League Finals 2019" />



    <TextView
        android:id="@+id/text_view_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_eventday"
        android:layout_marginTop="1dp"
        android:paddingStart = "10dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="8sp"
        android:textSize = "10sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textColor="#000"
        android:fontFamily="@font/proxima_bold"
        android:text="League Finals 2019" />



</LinearLayout>
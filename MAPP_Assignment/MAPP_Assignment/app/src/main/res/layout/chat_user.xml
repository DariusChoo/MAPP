<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chat_image"
        android:src="@drawable/gamecontrollerico"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/chat_name"
        android:layout_toRightOf="@+id/chat_image"
        android:layout_toEndOf="@+id/chat_image"
        android:layout_alignTop="@+id/chat_image"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:fontFamily="@font/proxima_bold"
        />

    <TextView
        android:id="@+id/lastMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_alignBottom="@+id/chat_image"
        android:layout_toEndOf="@+id/chat_image"
        android:layout_toRightOf="@+id/chat_image"
        android:fontFamily="@font/proxima_bold"
        android:text="last message"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/chat_image"
        android:layout_marginStart="229dp"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/chat_image"
        android:fontFamily="@font/proxima_bold"
        android:text="last message"
        android:textSize="18sp" />

</RelativeLayout>